{
    "devDependencies": {
        "@tailwindcss/forms": "^0.5.7",
        "esbuild": "^0.25.5",
        "tailwindcss": "^4.1.11"
    },
    "scripts": {
        "build-css": "tailwindcss -i input.css -o static/dist/style.css",
        "build-js": "esbuild src/chart.js --bundle --outfile=static/dist/chart.js --format=iife --global-name=ChartBundle",
        "build-js-watch": "esbuild src/chart.js --bundle --outfile=static/dist/chart.js --format=iife --global-name=ChartBundle --watch",
        "build": "npm run build-css && npm run build-js",
        "dev": "npm run build-js && npm run build-css"
    },
    "dependencies": {
        "chart.js": "^4.5.0",
        "chartjs-adapter-date-fns": "^3.0.0"
    }
}
